/* pages/chargingSelectCell/chargingSelectCell.wxss */
page{
  background-color: #0455a8;
}
/* icon */
.qsg-icon-shijian:before{
  content: '\e600';
}
.qsg-icon-cishu:before{
  content: '\e609';
}
/* /icon */
.tab-bar{
  width: 700rpx;
  display: flex;
  background-color: #fff;
  margin: 0 auto;
  line-height: 65rpx;
  font-size: 30rpx;
}
.tab-bar-list{
  flex: 1;
  display: flex;
  justify-content: center;
  color: #656563;
  position: relative;
}
.tab-bar-list.active::before{
  content: "";
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: blue;
  bottom: 0;
  left: 0;
}
.qsg-iconfont{
  font-size: 40rpx;
  color: #0455a8;
  margin-right: 10rpx;
}
.select-main{
  background-color: #569be1;
  width: 700rpx;
  margin: 20rpx auto;
  display: flex;
  border-radius: 5rpx;
  overflow: hidden;
}
.cell-img{
  width: 300rpx;
  height: 300rpx;
  border-radius: 5rpx;
}
.cell-content{
  display: flex;
  line-height: 40rpx;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}
.cell-content-type{
  display: flex;
}
.cell-content-type view{
  color: blue;
  font-size: 40rpx;
}
.select-btn{
  position: fixed;
  bottom: 30rpx;
  left: 50rpx;
  width: 650rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  border-radius: 30rpx;
}